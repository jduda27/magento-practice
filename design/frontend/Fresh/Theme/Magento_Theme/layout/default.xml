<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
      <block name="require.js" class="Magento\Framework\View\Element\Template" template="Magento_Theme::page/js/require_js.phtml" />
      <referenceContainer name="after.body.start">
         <block class="Magento\Translation\Block\Html\Head\Config" name="translate-config" />
         <block class="Magento\Translation\Block\Js" name="translate" template="Magento_Translation::translate.phtml" />
         <block class="Magento\Framework\View\Element\Js\Cookie" name="js_cookies" template="Magento_Theme::js/cookie.phtml" />
         <block class="Magento\Theme\Block\Html\Notices" name="global_notices" template="Magento_Theme::html/notices.phtml" />
      </referenceContainer>
      <referenceBlock name="megamenu.mobi" remove="true" />
      <referenceBlock name="top.links" remove="true" />
      <referenceBlock name="catalog.topnav" remove="true" />
      <referenceBlock name="category.product.addto.compare" remove="true" />
      <referenceBlock name="skip_to_content.target" remove="true" />
      <referenceBlock name="header.panel.wrapper" remove="true" />
      <referenceBlock name="header-wrapper" remove="true" />


      <referenceContainer name="main.content">
         <block class="Magento\Framework\View\Element\Template" name="skip_to_content.target" before="-" template="Magento_Theme::html/skiptarget.phtml">
            <arguments>
               <argument name="target_id" xsi:type="string">contentarea</argument>
            </arguments>
         </block>
      </referenceContainer>
      
	  <!-- Header new start -->
      <referenceContainer name="page.top" remove="true" />
      <referenceBlock name="company_notice_blocked" remove="true" />
      <referenceContainer name="header.container" htmlClass="megamenu-newheader">
         
		 <container name="top.bar" htmlTag="div" htmlClass="top-bar">
			<block class="Magento\Framework\View\Element\Template" name="custom_header_website" as="custom_header_website" template="Magento_Theme::html/websiteheader_banner.phtml" before="nav-container" />
		 </container>

		 <container name="nav-container" htmlTag="div" htmlClass="container-fluid" after="top.bar">
		 
			<container name="top-search" htmlTag="div" htmlClass="row" before="row-header-wrap">
				<container name="search-fullwidth-mobile" as="search-fullwidth-mobile" label="search-fullwidth-mobile" before="-" htmlTag="div" htmlClass="megamenu-header-search-mobile col-12 col-sm-12 col-md-12 col-lg-12">
                  <block class="Magento\Framework\View\Element\Template" name="top.search.mobile" as="topSearch.mobile" template="Magento_Search::form.mini.phtml" />
               </container>
			</container>
			
			<container name="row-header-wrap" htmlTag="div" htmlClass="row header-wrap">
               <container name="megamenu-header-left" htmlTag="div" before="megamenu-header-logo" htmlClass="megamenu-header-search-toggle col-xs-3 col-sm-3 col-md-4 col-lg-4">
                   <block class="Magento\Framework\View\Element\Template" name="search-toggle" as="search-toggle" template="Magento_Theme::searchtoggle.phtml" before="-" />
               </container>
               <container name="megamenu-header-logo" htmlTag="div" before="megamenu-header-right" htmlClass="megamenu-header-logo col-xs-6 col-sm-6 col-md-4 col-lg-4">
                   <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                       <arguments>
                           <argument name="logoPathResolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoPathResolver</argument>
                           <argument name="logo_size_resolver" xsi:type="object">Magento\Theme\ViewModel\Block\Html\Header\LogoSizeResolver</argument>
                       </arguments>
                   </block>
               </container>
               <container name="megamenu-header-right" htmlTag="div" htmlClass="megamenu-header-search-links col-xs-3 col-sm-3 col-md-4 col-lg-4">
                  <container name="megamenu-header-top-link" htmlTag="ul" htmlClass="megamenu-header-ul-links">
                   <block class="Magento\Customer\Block\Account\AuthorizationLink" name="toplinks1" as="toplinks1" template="Magento_Theme::top-links.phtml" before="-" />
                  </container>
               </container>
            </container>
			
			<container name="header-full-width" as="header-full-width" label="header-full-width" htmlTag="div" htmlClass="nav-main" after="row-header-wrap">
				<container name="search-fullwidth" as="search-fullwidth" label="search-fullwidth" before="megamenu-header-fullwidth" htmlTag="div" htmlClass="search-wrap">
					<block class="Magento\Framework\View\Element\Template" name="top.search" as="topSearch" template="Magento_Search::form.mini.phtml" />
				</container>
				<container name="megamenu-header-fullwidth" as="megamenu-header-fullwidth" label="megamenu-header-fullwidth" htmlTag="div" htmlClass="nav-menu">
                   <block class="Magento\Framework\View\Element\Template" name="magento-header-refresh" as="magento-header-refresh" template="Magento_Theme::header-nav-menu.phtml"  />
                </container>

			</container>
         </container>
      </referenceContainer>
      <move element="minicart" destination="megamenu-header-right" after="megamenu-header-top-link"/>
      <!-- Header new end -->
	  
      <referenceContainer name="page.top">
         <container name="top.container" as="topContainer" label="After Page Header Top" htmlTag="div" htmlClass="top-container" />
      </referenceContainer>
      <referenceContainer name="columns.top">
         <block class="Magento\Theme\Block\Html\Title" name="page.main.title" template="Magento_Theme::html/title.phtml" />
         <block class="Magento\Theme\Block\Html\Breadcrumbs" name="breadcrumbs" as="breadcrumbs" />
         <container name="page.messages" htmlTag="div" htmlClass="page messages">
            <block class="Magento\Framework\View\Element\Template" name="ajax.message.placeholder" template="Magento_Theme::html/messages.phtml" />
            <block class="Magento\Framework\View\Element\Messages" name="messages" as="messages" template="Magento_Theme::messages.phtml" />
         </container>
      </referenceContainer>
      <referenceContainer name="main">
         <container name="content.top" label="Main Content Top">
            <block name="main_css_preloader" as="main_css_preloader" template="Magento_Theme::html/main_css_preloader.phtml" ifconfig="dev/css/use_css_critical_path" />
         </container>
         <container name="content" label="Main Content Area" />
         <container name="content.aside" label="Main Content Aside" />
         <container name="content.bottom" label="Main Content Bottom" />
      </referenceContainer>
      <referenceContainer name="page.bottom.container">
         <container name="page.bottom" label="Before Page Footer" htmlTag="div" htmlClass="content" />
         <block name="customer.section.config" class="Magento\Customer\Block\SectionConfig" template="Magento_Customer::js/section-config.phtml">
            <arguments>
               <argument name="sectionNamesProvider" xsi:type="object">Magento\Customer\Block\SectionNamesProvider</argument>
            </arguments>
         </block>
         <block name="customer.customer.data" class="Magento\Customer\Block\CustomerData" template="Magento_Customer::js/customer-data.phtml" />
      </referenceContainer>
      <referenceContainer name="footer-container">
         <block class="Magento\Theme\Block\Html\Footer" name="footer" template="html/footer.phtml" />
      </referenceContainer>
      <referenceContainer name="before.body.end">
         <block class="Magento\Customer\Block\Account\AuthorizationLink" name="toplinksmobile" as="toplinksmobile" template="Magento_Theme::html/link_js_script.phtml" before="-" />

         <block class="Magento\Theme\Block\Html\Footer" name="absolute_footer" template="Magento_Theme::html/absolute_footer.phtml" />
      </referenceContainer>
      <referenceContainer name="content">
         <block class="Magento\Framework\View\Element\FormKey" name="formkey" />
      </referenceContainer>
      <move element="page.main.title" destination="breadcrumbs" />
      <referenceContainer name="columns.top">
         <block class="Magento\Framework\View\Element\Template" name="test.file" after="breadcrumbs" template="Magento_Theme::html/test.phtml" />
      </referenceContainer>

      <referenceBlock name="cookie_notices" remove="true" />
      <referenceBlock name="customer-login-popup" remove="true" />
   </body>
</page>